{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": false,
    "removeComments": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
  }
}
